<Window x:Class="BlurTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Name="txt" Text="SomeText" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="70"/>
        <Button Content="ShowDialog" Grid.Row="1" Click="Button_Click"/>
    </Grid>
</Window>
